@model web_req_volcano.Models.Car

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarId" />
            <div class="form-group">
                <label asp-for="VehicleTypeId" class="control-label"></label>
                <select asp-for="VehicleTypeId" class="form-control" asp-items="ViewBag.VehicleTypeId"></select>
                <span asp-validation-for="VehicleTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarSpecifications" class="control-label"></label>
                <input asp-for="CarSpecifications" class="form-control" />
                <span asp-validation-for="CarSpecifications" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarIdNumber" class="control-label"></label>
                <input asp-for="CarIdNumber" class="form-control" />
                <span asp-validation-for="CarIdNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarNote" class="control-label"></label>
                <input asp-for="CarNote" class="form-control" />
                <span asp-validation-for="CarNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
